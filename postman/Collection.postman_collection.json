{
	"info": {
		"_postman_id": "rest-api-collection",
		"name": "Rest API - Education App",
		"description": "Collection untuk testing REST API aplikasi edukasi",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "1. Request OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.otp_code) {",
									"        pm.environment.set('otp_code', response.otp_code);",
									"        console.log('OTP Code saved:', response.otp_code);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"purpose\": \"email_verification\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/request-otp",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"request-otp"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.user_id) {",
									"        pm.environment.set('user_id', response.data.user_id);",
									"        console.log('User ID saved:', response.data.user_id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{username}}\",\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\",\n    \"confirm_password\": \"{{password}}\",\n    \"otp_code\": \"{{otp_code}}\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/register",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"register"
							]
						}
					},
					"response": []
				},
				{
					"name": "3. Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"otp_code\": \"{{otp_code}}\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/verify-email",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"verify-email"
							]
						}
					},
					"response": []
				},
				{
					"name": "4. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.token) {",
									"        pm.environment.set('token', response.data.token);",
									"        console.log('Token saved:', response.data.token.substring(0, 20) + '...');",
									"    }",
									"    if (response.data && response.data.user) {",
									"        pm.environment.set('user_id', response.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/login",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "5. Get Current User (Me)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{auth_url}}/me",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"me"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Profile",
			"item": [
				{
					"name": "1. Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{profile_url}}",
							"host": [
								"{{profile_url}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Complete Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"full_name\": \"{{full_name}}\",\n    \"gender\": \"{{gender}}\",\n    \"grade_level_id\": {{grade_level_id}},\n    \"class_id\": {{class_id}},\n    \"bio\": \"I love learning!\"\n}"
						},
						"url": {
							"raw": "{{profile_url}}/complete",
							"host": [
								"{{profile_url}}"
							],
							"path": [
								"complete"
							]
						}
					},
					"response": []
				},
				{
					"name": "3. Update Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"full_name\": \"{{full_name}} Updated\",\n    \"bio\": \"Updated bio text\"\n}"
						},
						"url": {
							"raw": "{{profile_url}}",
							"host": [
								"{{profile_url}}"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		}
	]
}

