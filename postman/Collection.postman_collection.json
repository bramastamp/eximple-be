{
	"info": {
		"_postman_id": "rest-api-collection-v2",
		"name": "Rest API - Education App",
		"description": "Collection untuk testing REST API aplikasi edukasi dengan flow register → verify email → login",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "1. Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201 || pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data) {",
									"        pm.environment.set('user_id', response.data.user_id);",
									"        pm.environment.set('email', response.data.email);",
									"        pm.environment.set('username', response.data.username);",
									"        if (response.data.otp_code) {",
									"            pm.environment.set('otp_code', response.data.otp_code);",
									"            console.log('OTP Code (dev mode):', response.data.otp_code);",
									"        }",
									"        console.log('User ID saved:', response.data.user_id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{username}}\",\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\",\n    \"confirm_password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/register",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"register"
							]
						},
						"description": "Register user baru. OTP akan dikirim otomatis ke email setelah register berhasil."
					},
					"response": []
				},
				{
					"name": "2. Request OTP (Resend)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.otp_code) {",
									"        pm.environment.set('otp_code', response.otp_code);",
									"        console.log('OTP Code (dev mode):', response.otp_code);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"purpose\": \"email_verification\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/request-otp",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"request-otp"
							]
						},
						"description": "Request OTP baru jika OTP sebelumnya expired. Hanya bisa digunakan untuk email yang sudah terdaftar tapi belum verified."
					},
					"response": []
				},
				{
					"name": "3. Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"otp_code\": \"{{otp_code}}\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/verify-email",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"verify-email"
							]
						},
						"description": "Verify email dengan OTP code yang diterima. Setelah verify, user bisa login."
					},
					"response": []
				},
				{
					"name": "4. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data) {",
									"        if (response.data.token) {",
									"            pm.environment.set('token', response.data.token);",
									"            console.log('Token saved');",
									"        }",
									"        if (response.data.user) {",
									"            pm.environment.set('user_id', response.data.user.id);",
									"            console.log('User ID saved:', response.data.user.id);",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/login",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"login"
							]
						},
						"description": "Login dengan email dan password. Email harus sudah terverifikasi."
					},
					"response": []
				},
				{
					"name": "5. Get Current User (Me)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{auth_url}}/me",
							"host": [
								"{{auth_url}}"
							],
							"path": [
								"me"
							]
						},
						"description": "Get informasi user yang sedang login. Membutuhkan token authentication."
					},
					"response": []
				}
			],
			"description": "Endpoints untuk authentication dan authorization"
		},
		{
			"name": "Profile",
			"item": [
				{
					"name": "1. Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{profile_url}}/",
							"host": [
								"{{profile_url}}"
							],
							"path": [
								""
							]
						},
						"description": "Get profile user yang sedang login."
					},
					"response": []
				},
				{
					"name": "2. Complete Profile (Onboarding)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"full_name\": \"{{full_name}}\",\n    \"gender\": \"{{gender}}\",\n    \"grade_level_id\": {{grade_level_id}},\n    \"class_id\": {{class_id}},\n    \"bio\": \"{{bio}}\"\n}"
						},
						"url": {
							"raw": "{{profile_url}}/complete",
							"host": [
								"{{profile_url}}"
							],
							"path": [
								"complete"
							]
						},
						"description": "Lengkapi profil user (onboarding). Dipanggil setelah login pertama kali."
					},
					"response": []
				},
				{
					"name": "3. Update Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"bio\": \"Updated bio for {{username}}\"\n}"
						},
						"url": {
							"raw": "{{profile_url}}/",
							"host": [
								"{{profile_url}}"
							],
							"path": [
								""
							]
						},
						"description": "Update profil user. Bisa update sebagian atau semua field."
					},
					"response": []
				}
			],
			"description": "Endpoints untuk mengelola profil user"
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						""
					]
				},
				"description": "Check apakah API server berjalan dengan baik."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		}
	]
}
